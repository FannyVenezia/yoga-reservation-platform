<h1>Hi !</h1>

<%= form_with url: courses_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Trouvez un cours"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% @courses.each do |course| %>
  <%= course.name %>
<% end %>
