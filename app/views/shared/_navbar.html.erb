<div class="navbar">
  <div>
    <%= link_to "NayaYoga", root_path %>
  </div>
  <div>
    <%= link_to "A propos", root_path %>
    <%= link_to "Retraites", root_path %>
    <%= link_to "Réserver", root_path %>
    <%= link_to "Workshops", root_path %>
    <%= link_to "Workshops", root_path %>
    <%= link_to "Contact", root_path %>
    <%= link_to ("<i class='fab fa-instagram'></i>").html_safe, root_path %>

    <% if user_signed_in? %>
      <div class="dropdown">
        <button class="dropbtn">Mon compte</button>
        <div class="dropdown-content">
          <%= link_to "Mon profil", root_path %>
          <%= link_to "Mes cours", root_path %>
          <%= link_to "Mes cours", root_path %>
          <%= link_to "Me déconnecter", destroy_user_session_path, data: {turbo_method: :delete} %>
        </div>
      </div>
    <% else %>
    <div class="dropdown">
        <button class="dropbtn">Mon compte</button>
        <div class="dropdown-content">
          <%= link_to "Mon profil", root_path %>
          <%= link_to "Mes cours", root_path %>
          <%= link_to "Mes réservations", root_path %>
          <%= link_to "Me connecter", new_user_session_path %>
        </div>
      </div>
